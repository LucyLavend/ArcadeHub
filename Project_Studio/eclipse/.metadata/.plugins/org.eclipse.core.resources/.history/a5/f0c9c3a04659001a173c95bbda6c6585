	public void objects()
	{
		float[] dead_grass = new float[]{10F,260F,5,2};
		Terrain.RenderListObjects.add(new ArrayListRequest(6,new LODSmallModel(18,"plants/dead_grass",LODSmallModel.class),dead_grass, true,new Vector3f(0,0,0)));		
